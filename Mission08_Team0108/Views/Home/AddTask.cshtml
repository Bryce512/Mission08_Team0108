
@{
    ViewData["Title"] = "AddTask";
}

<h1>AddTask</h1>

<form method="post">
	<div class="form-group">
		<label aspfor="Task">Task</label>
		<input type="text" class="form-control" id="taskName" placeholder="Enter task name">
	</div>
	<div class="form-group">
		<label for="DueDate">Due Dtae</label>
		<input type="date" class="form-control" id="taskDescription" placeholder="Enter task description">
	</div>
	<div class="form-group">
		<label for="taskDueDate">Task Due Date</label>
		<input type="date" class="form-control" id="taskDueDate">
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>